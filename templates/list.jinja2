{% extends 'base.jinja2' %}

{% block body %}

<h3 class='upper mbl'><a href='/'>Le' journal</a></h3>

{% for entry in entries %}
<article id='entry={{ entry.id }}' class='mbl'>
    <h2 class='mbn'><a href='/post/{{ entry.id }}'>{{ entry.title }}</a>
        <span class='light h4'>{{ entry.created.strftime('%b. %d, %Y') }}</span>
    </h2>
    <section>
        {{ entry.text | markdown | safe }}
    </section>
</article>
{% else %}
<div class='entry'>
    <p>Nothin!</p>
</div>
{% endfor %}

{% if request.authenticated_userid %}
<aside>
    <form action="{{ request.route_url('add') }}" method="POST" class="add_entry">
        <input class='display-block' type='text' name='title'
               id='title' placeholder='Post title' />
        <textarea class='display-block' name='text'
                  id='text' placeholder='Write your content'>
        </textarea>
        <input class='display-block' type='submit' value='Add post' name='Add post' />
    </form>
</aside>
{% endif %}

{% endblock %}
